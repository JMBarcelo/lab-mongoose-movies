<h2>My Celebrities</h2>

<ul>
{{#each celebrities}}
    <li>
        <a href="/celebrity/{{this._id}}">{{ this.name }}</a>
        <a href="/celebrity/{{this._id}}/edit">Edit this Celebrity</a>
        <a href="/celebrity/{{this._id}}/delete" onclick="return confirm('Delete {{this.name}} from BD??')">Delete this Celebrity</a>
    </li>
{{else}}
    <p class="empty">No content</p>
{{/each}}
</ul>

<a href="/celebrity/new">Add new Celebrity</a>
<a href="/">Go back to HOME</a>